#!/bin/bash

source /usr/local/sc/config
user=$1
mount_dir=$2

user_str=$(grep "^$user:" /etc/passwd )
if [ -z "$user_str" ]; then
	    exit
fi

if [ -z "$moun_dir" ]; then
  # Defining user homedir
  mount_dir="$(echo $user_str |cut -f 6 -d :)"
fi

if [ ! -z "$user" ]; then
	if [ -z "$(mount |grep /jail/$user/$user)" ]; then
		    mount -o bind $mount_dir /jail/$user/$user/
	fi
fi
